# DirectorX Environment Variables

# App Configuration
APP_ENV=development
NODE_ENV=development
PORT=8000
FRONTEND_URL=http://localhost:3000

# Security
JWT_SECRET=your-jwt-secret-key-here
BCRYPT_ROUNDS=12

# Database (Firestore)
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_PRIVATE_KEY=your-private-key
GOOGLE_CLOUD_CLIENT_EMAIL=your-client-email

# Storage (Google Cloud Storage)
STORAGE_BUCKET=your-storage-bucket
STORAGE_URL=https://storage.googleapis.com/your-bucket

# AI Services
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_AI_API_KEY=your-google-ai-api-key

# TTS Services
ELEVENLABS_API_KEY=your-elevenlabs-api-key

# Content Security Policy
CSP_CONNECT_SRC='self' https://api.openai.com https://storage.googleapis.com

# Processing
MAX_CONCURRENCY=10
FFMPEG_PATH=/usr/bin/ffmpeg
FONTS_PATH=/usr/share/fonts/truetype/noto

# Logging
LOG_LEVEL=info